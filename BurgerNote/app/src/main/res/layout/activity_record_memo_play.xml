<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="344dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="음성 메모"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/record_close_button"
            android:background="@color/white"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clear"/>

    </LinearLayout>

    <TextView
        android:id="@+id/record_play_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:text="여기에 파일 제목이 들어옵니다."
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/gray9"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/record_play_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:text="00:00"
        android:textColor="@color/gray6"
        android:textSize="14dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/record_reset_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:text="처음"
            android:textColor="@color/gray0"
            android:background="@drawable/filled_button"
            app:tabIconTint="@color/tab_icon_color" />

        <Button
            android:id="@+id/record_play_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            android:text="재생"
            android:textColor="@color/gray0"
            android:background="@drawable/filled_button"
            app:tabIconTint="@color/tab_icon_color" />

        <Button
            android:id="@+id/record_delete_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:text="삭제"
            android:textColor="@color/gray0"
            android:background="@drawable/filled_button"
            app:tabIconTint="@color/tab_icon_color" />

    </LinearLayout>


</LinearLayout>