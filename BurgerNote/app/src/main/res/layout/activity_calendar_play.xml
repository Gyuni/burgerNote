<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="344dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="일정"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/calendar_close_button"
            android:background="@color/white"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clear"/>

    </LinearLayout>

    <TextView
        android:id="@+id/calendar_play_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:text="여기에 내용이 들어옵니다."
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/gray9"
        android:scrollbars="vertical"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/calendar_play_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:text="2020년 12월 30일"
        android:textColor="@color/gray6"
        android:textSize="14dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="16dp" >

        <TextView
            android:id="@+id/calendar_play_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04시 30분"
            android:textColor="@color/gray6"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ~ "
            android:textColor="@color/gray6"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/calendar_play_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12시 30분"
            android:textColor="@color/gray6"
            android:textSize="14dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/calendar_delete_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="삭제"
            android:textSize="14dp"
            android:textColor="@color/gray0"
            android:background="@drawable/filled_button"
            app:tabIconTint="@color/tab_icon_color" />

    </LinearLayout>

</LinearLayout>